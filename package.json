{
  "name": "hospital-management-app",
  "author": "ShortSqueeze",
  "description": "Hospital Management App",
  "version": "0.1.0",
  "private": true,
  "homepage": ".",
  "main": "public/electron.js",
  "build": {
    "appId": "com.hma",
    "productName": "Hospital Management App",
    "win": {
      "target": "nsis",
      "icon": "public/CAU_logo512.png"
    }
  },
  "nsis": {
    "installerIcon": "public/CAU_logo512.png",
    "installerHeaderIcon": "public/CAU_logo512.png",
    "deleteAppDataOnUninstall": true
  },
  "dependencies": {
    "@testing-library/jest-dom": "^5.11.4",
    "@testing-library/react": "^11.1.0",
    "@testing-library/user-event": "^12.1.10",
    "ajv": "^6.12.6",
    "concurrently": "^6.3.0",
    "cross-env": "^7.0.3",
    "electron-is-dev": "^2.0.0",
    "fs": "^0.0.1-security",
    "nedb-promises": "^6.0.3",
    "open": "^8.4.0",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-router-dom": "^6.2.2",
    "react-scripts": "4.0.3",
    "react-select": "^5.2.2",
    "reactjs-popup": "^2.0.5",
    "wait-on": "^6.0.0",
    "web-vitals": "^1.0.1"
  },
  "scripts": {
    "react-start": "react-scripts start",
    "react-build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "electron-dev": "electron .",
    "start": "concurrently -k \"cross-env BROWSER=none npm run react-start\" \"npm run electron\"",
    "electron-build-dev": "SET ELECTRON_IS_DEV=0 && react-scripts build && electron .",
    "dist": "react-scripts build && electron-builder build",
    "electron": "wait-on tcp:3000 && electron ."
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "electron": "^13.2.1",
    "electron-builder": "^22.14.13"
  }
}
